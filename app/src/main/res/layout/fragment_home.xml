<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_home">

    <HorizontalScrollView
        android:id="@+id/scroll_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="scrolview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_banner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_banner1" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_banner2" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_banner3" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/btn_servis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_banner"
        app:srcCompat="@drawable/ic_fitur"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/img_servis"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_servis"
        app:layout_constraintStart_toStartOf="@+id/btn_servis"
        app:layout_constraintTop_toTopOf="@+id/btn_servis"
        app:srcCompat="@drawable/fitur_servis" />

    <ImageButton
        android:id="@+id/btn_darurat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_servis"
        app:layout_constraintTop_toTopOf="@+id/btn_servis"
        app:srcCompat="@drawable/ic_fitur"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/img_darurat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_darurat"
        app:layout_constraintStart_toStartOf="@+id/btn_darurat"
        app:layout_constraintTop_toTopOf="@+id/btn_darurat"
        app:srcCompat="@drawable/darurat" />

    <ImageButton
        android:id="@+id/btn_bengkel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/btn_servis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_servis"
        app:srcCompat="@drawable/ic_fitur"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/img_bengkel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_bengkel"
        app:layout_constraintStart_toStartOf="@+id/btn_bengkel"
        app:layout_constraintTop_toTopOf="@+id/btn_bengkel"
        app:srcCompat="@drawable/bengkel_terdekat" />

    <TextView
        android:id="@+id/txt_bengkel"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:lines="2"
        android:maxLines="2"
        android:text="Bengkel Terdekat"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/btn_bengkel"
        app:layout_constraintEnd_toEndOf="@+id/btn_bengkel"
        app:layout_constraintStart_toStartOf="@+id/btn_bengkel" />

    <TextView
        android:id="@+id/txt_servis"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:lines="2"
        android:maxLines="2"
        android:text="Servis Rutin"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/btn_servis"
        app:layout_constraintEnd_toEndOf="@+id/btn_servis"
        app:layout_constraintStart_toStartOf="@+id/btn_servis" />

    <TextView
        android:id="@+id/txt_darurat"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:lines="2"
        android:maxLines="2"
        android:text="Darurats"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/btn_darurat"
        app:layout_constraintEnd_toEndOf="@+id/btn_darurat"
        app:layout_constraintStart_toStartOf="@+id/btn_darurat" />

</androidx.constraintlayout.widget.ConstraintLayout>
